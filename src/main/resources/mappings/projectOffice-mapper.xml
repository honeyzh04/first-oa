    <!-- 匹配项目 -->
    <select id="findcuProject"
            resultType="com.first.entity.ProjectOfficeFormMap" parameterType="com.first.entity.ProjectOfficeFormMap">
        select
        <include refid="selectId"/>
        from proj_office_data
        where
        state !=4
        <choose>
            <when test="id != null and id !=''">
                <if test="apartment != null and apartment != '' ">
                    AND type=#{apartment}

                </if>

                <if test="totalPrice != null and totalPrice != '' ">
                    and (pricess &lt;= ${totalPrice} AND ${totalPrice} &lt;= pricese)

                </if>
            </when>
            <otherwise>
                and 1=0
            </otherwise>
        </choose>


    </select>



