    <select id="findOfficeList" resultType="com.first.entity.ProjectOfficeFormMap">
        SELECT a.*,b.projectName,b.type,b.firstPerson FROM (SELECT
        a.*, ROUND(acreate * Rent * 12 / 10000, 0) AS AnnualRent,
        CONCAT( ROUND(
        acreate * Rent * 12 / 100 / totalPrice, 0),'%') AS RateOfReturn,
        b.img
        FROM
        proj_office a
        LEFT JOIN proj_office_img b ON a.id = b.officeId
        WHERE
        1 = 1
        <if test=" proId != null and proId != ''">
            and prId=#{proId}
        </if>
        GROUP BY
        a.id) a LEFT JOIN proj_office_data b on a.prId=b.id
    </select>
    <select id="findOffice" resultType="com.first.entity.ProjectOfficeFormMap">
				SELECT
			a.*, ROUND(
				a.acreate * a.Rent * 12 / 10000,
				0
			) AS AnnualRent,
			CONCAT(
				ROUND(
					a.acreate * a.Rent * 12 / 100 / totalPrice,
					0
				),
				'%'
			) AS RateOfReturn,
			b.firstPerson,
			b.projectName
		FROM
			proj_office a
		LEFT JOIN proj_office_data b ON a.prId = b.id
		WHERE
			a.id=#{id}
	</select>
